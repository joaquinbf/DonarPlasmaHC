{{#if mensaje}}

<div class="alert alert-success alert-dismissible fade show my-0" role="alert">
  <strong>{{mensaje}}</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

{{/if}}

{{#each mensajes}}

<div class="alert alert-success alert-dismissible fade show my-0" role="alert">
  <strong>{{text}}</strong>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>

{{/each}}